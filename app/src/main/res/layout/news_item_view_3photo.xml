<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item_bg_selector"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvNewsTitle_3photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="这是标题"
        android:textColor="@color/text1"
        android:textSize="@dimen/text_size_largex" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNewsThumbnail1_3photo"
            android:layout_width="117dp"
            android:layout_height="78dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_bg" />

        <ImageView
            android:id="@+id/ivNewsThumbnail2_3photo"
            android:layout_width="117dp"
            android:layout_height="78dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_bg" />

        <ImageView
            android:id="@+id/ivNewsThumbnail3_3photo"
            android:layout_width="117dp"
            android:layout_height="78dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_bg" />
    </LinearLayout>

    <include
        android:id="@+id/llNewsInfo_3photo"
        layout="@layout/news_item_news_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <include
        android:id="@+id/llActivity_3photo"
        layout="@layout/news_item_view_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone" />
</LinearLayout>